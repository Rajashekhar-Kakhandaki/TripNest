<%- layout("layouts/boilerplate") %>

    
        <div class="col-8 offset-3">
            <h3>
                <%=listing.title%>
            </h3>
            <div class="card col-6 listing-card">
                <img src="<%=listing.image%>" class="card-img-top show-img" alt="Listing image">
                <div class="card-body">
                    <p class="card-text">
                    <ul>
                        <li>
                            Owned By:<i><%=listing.owner.username%></i>
                        </li>
                        <li>
                            <%=listing.description%>
                        </li>
                        <li>&#8377;<%= listing.price?.toLocaleString("en-IN") || "" %>/night</li>

                        <li>
                            <%=listing.location%>
                        </li>
                        <li>
                            <%=listing.country%>
                        </li>
                    </ul>
                    <% if(currUser && currUser._id.equals(listing.owner._id)){%>
                       <div class="show-btns">
                        <form method="get" action="/Listings/<%=listing._id%>/edit">
                            <button class="btn btn-danger mt-2">Edit</button>
                        </form><br>
                        <form method="POST" action="/Listings/<%=listing._id%>?_method=delete">
                            <button class="btn btn-dark mt-2">Delete</button></p>
                        </form>
                    </div> 
                    <%}%>
                    

                </div>
            </div>
        </div>
        <div class="col=8 offset-3 mb-3">
            <hr>
            <h4>Leave a review</h4>
            <form action="/Listings/<%=listing._id%>/review" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating :</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" style="accent-color: blue;"
                        class="form-range">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment :</label>
                    <textarea name="review[comment]" id="comment" rows="5" cols="30" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">please submit some comments for review</div>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <p><b>All Review</b></p>
            <div class="row">
                <% for(review of listing.reviews){ %>
                    <div class="card col-5 mb-3 ms-5 py-2 px-3">
                        <div class="card-body">
                            <h5 class="card-title">Raj</h5>
                            <p class="card-text">
                                <%=review.comment%>
                            </p>
                            <p class="card-text">
                                <%=review.rating%> stars
                            </p>
                        </div>
                        <form action="/Listings/<%=listing._id%>/review/<%=review._id%>?_method=delete" method="post" class="mb-2 mt-2">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>

                    </div>
            
            <%}%>
        </div>

        </div>

    